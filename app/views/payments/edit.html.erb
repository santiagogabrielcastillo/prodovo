<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow-lg rounded-lg p-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
      <p class="text-gray-600 mt-1">
        <% if @payment.quote %>
          <%= t('.subtitle_quote', quote_id: @payment.quote.id, client_name: @payment.client.name) %>
        <% else %>
          <%= t('.subtitle_client', client_name: @payment.client.name) %>
        <% end %>
      </p>
    </div>

    <%= form_with(model: @payment, url: payment_path(@payment), class: "space-y-6") do |form| %>
      <% if @payment.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded">
          <p class="font-semibold mb-2"><%= t('.errors_header') %></p>
          <ul class="list-disc list-inside text-sm">
            <% @payment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :date, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
      </div>

      <div>
        <%= form.label :amount, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :amount,
            step: 1,
            value: @payment.amount&.to_i,
            class: "no-spinner mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
        <p class="mt-1 text-sm text-gray-500"><%= t('.amount_hint') %></p>
      </div>

      <div>
        <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
      </div>

      <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
        <% back_path = @payment.quote ? quote_path(@payment.quote) : client_path(@payment.client) %>
        <%= link_to t('global.actions.cancel'), back_path, class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
        <%= form.submit t('.update_payment'), class: "px-4 py-2 rounded bg-indigo-600 text-white hover:bg-indigo-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

