<div class="w-full max-w-2xl">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Record Payment</h1>
    <p class="text-gray-600">Record a payment for <strong>Quote #<%= @quote.id %></strong> - <%= @quote.client.name %></p>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with(model: [@quote, @payment], class: "space-y-6") do |form| %>
      <% if @payment.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded">
          <p class="font-semibold mb-2">Please fix the following:</p>
          <ul class="list-disc list-inside text-sm">
            <% @payment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :date, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
      </div>

      <div>
        <%= form.label :amount, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :amount, step: 1, value: @payment.amount&.to_i, class: "no-spinner mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
        <p class="mt-1 text-sm text-gray-500">Amount due: $<%= number_with_precision(@quote.amount_due, precision: 0) %></p>
      </div>

      <div>
        <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :notes, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
      </div>

      <div class="flex justify-end gap-3">
        <%= link_to "Cancel", @quote, class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
        <%= form.submit "Record Payment", class: "px-4 py-2 rounded bg-indigo-600 text-white hover:bg-indigo-700" %>
      </div>
    <% end %>
  </div>
</div>

