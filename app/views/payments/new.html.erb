<%= turbo_frame_tag "modal" do %>
  <!-- Modal Backdrop -->
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-gray-900/50 backdrop-blur-sm" 
       data-controller="modal" 
       data-action="click->modal#closeBackdrop">
    <!-- Modal Container -->
    <div class="bg-white rounded-lg shadow-xl w-full max-w-lg mx-auto relative" 
         data-modal-target="container"
         onclick="event.stopPropagation()">
      <!-- Modal Header -->
      <div class="flex items-center justify-between p-6 border-b border-gray-200">
        <div>
          <h2 class="text-2xl font-bold text-gray-900"><%= t('.title') %></h2>
          <p class="text-sm text-gray-600 mt-1"><%= t('.subtitle', quote_id: @quote.id, client_name: @quote.client.name) %></p>
        </div>
        <button type="button" 
                class="text-gray-400 hover:text-gray-600 focus:outline-none"
                data-action="click->modal#close"
                aria-label="<%= t('global.actions.close') %>">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Modal Body -->
      <div class="p-6">
        <%= form_with(model: [@quote, @payment], class: "space-y-6", data: { turbo_frame: "modal" }) do |form| %>
          <% if @payment.errors.any? %>
            <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded">
              <p class="font-semibold mb-2">Please fix the following:</p>
              <ul class="list-disc list-inside text-sm">
                <% @payment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= form.label :date, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
          </div>

          <div>
            <%= form.label :amount, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :amount, 
                step: 1, 
                min: 1,
                max: @quote.amount_due.to_i,
                value: @payment.amount&.to_i, 
                class: "no-spinner mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
            <p class="mt-1 text-sm text-gray-500"><%= t('.amount_due', amount: number_with_precision(@quote.amount_due, precision: 0)) %></p>
          </div>

          <div>
            <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
          </div>

          <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
            <button type="button" 
                    class="px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50"
                    data-action="click->modal#close">
              <%= t('global.actions.cancel') %>
            </button>
            <%= form.submit t('.record_payment'), class: "px-4 py-2 rounded bg-indigo-600 text-white hover:bg-indigo-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
