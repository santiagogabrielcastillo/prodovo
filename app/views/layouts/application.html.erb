<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Prodovo" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 min-h-screen antialiased">
    <div class="min-h-screen flex flex-col <%= 'md:flex-row' if user_signed_in? %>" data-controller="sidebar">
      <% if user_signed_in? %>
        <%= render "shared/navbar" %>
      <% end %>

      <div class="flex-1 flex flex-col bg-gray-50 min-h-screen">
        <div class="w-full max-w-7xl mx-auto flex-1 px-4 py-6 md:px-8 md:py-8">
          <%= render "shared/flash" %>

          <main class="mt-4">
            <%= yield %>
          </main>
        </div>
      </div>
    </div>
    
    <!-- Modal Placeholder (Global) -->
    <%= turbo_frame_tag "modal" %>
  </body>
</html>
