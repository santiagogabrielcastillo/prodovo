<%= form_with(model: [client, custom_price], class: "space-y-6") do |form| %>
  <% if custom_price.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded">
      <p class="font-semibold mb-2">Please fix the following:</p>
      <ul class="list-disc list-inside text-sm">
        <% custom_price.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :product_id, "Product", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :product_id, @products, :id, :name, { prompt: "Select a product" }, class: "w-full rounded border-gray-300 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :price, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :price, step: 0.01, class: "w-full rounded border-gray-300 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "Cancel", client_path(client), class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
    <%= form.submit class: "px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700" %>
  </div>
<% end %>

