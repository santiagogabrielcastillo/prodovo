<%= form_with(model: quote, class: "space-y-6", data: { controller: "quote-form", quote_form_client_id_value: (quote.client_id || 0) }) do |form| %>
  <% if quote.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded">
      <p class="font-semibold mb-2">Please fix the following:</p>
      <ul class="list-disc list-inside text-sm">
        <% quote.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow rounded-lg p-6 space-y-6">
    <h2 class="text-xl font-semibold text-gray-900">Quote Details</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :client_id, "Client", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.collection_select :client_id,
            Client.order(:name),
            :id,
            :name,
            { prompt: "Select a client" },
            {
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base",
              data: {
                action: "change->quote-form#updateClientId",
                quote_form_target: "clientSelect"
              }
            } %>
      </div>

      <div>
        <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :status,
            options_for_select(Quote.statuses.map { |k, v| [k.humanize, k] }, quote.status),
            {},
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" } %>
      </div>

      <div>
        <%= form.label :date, "Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
      </div>

      <div>
        <%= form.label :expiration_date, "Expiration Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :expiration_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
      </div>
    </div>

    <div>
      <%= form.label :notes, "Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Quote Items</h2>
      <button type="button"
              class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              data-action="click->quote-form#addItem">
        Add Item
      </button>
    </div>

    <div data-quote-form-target="itemsContainer" class="space-y-4">
      <%= form.fields_for :quote_items do |item_form| %>
        <%= render "quote_item_fields", form: item_form %>
      <% end %>
    </div>

    <template data-quote-form-target="template">
      <%= form.fields_for :quote_items, QuoteItem.new, child_index: "NEW_RECORD" do |item_form| %>
        <%= render "quote_item_fields", form: item_form %>
      <% end %>
    </template>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center">
      <span class="text-lg font-semibold text-gray-900">Grand Total:</span>
      <span class="text-2xl font-bold text-indigo-600" data-quote-form-target="grandTotal">$0.00</span>
    </div>
  </div>

  <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:justify-end">
    <%= link_to "Cancel",
        quote.persisted? ? quote : quotes_path,
        class: "mt-3 inline-flex w-full justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-base font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:mt-0 sm:w-auto sm:text-sm" %>
    <%= form.submit quote.persisted? ? "Update Quote" : "Create Quote",
        class: "flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
  </div>
<% end %>

