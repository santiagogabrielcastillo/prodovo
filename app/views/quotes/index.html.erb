<div class="w-full space-y-6">
  <div class="flex sm:flex-row flex-col space-y-2 sm:items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
    <div>
      <%= link_to t('.new_quote'), new_quote_path, class: "px-4 py-2 rounded bg-indigo-600 text-white hover:bg-indigo-700" %>
    </div>
  </div>

  <%= turbo_frame_tag "quotes_list" do %>
    <!-- Search Form -->
    <div class="bg-white shadow rounded-lg p-4">
      <%= search_form_for @q, url: quotes_path, method: :get, class: "flex flex-col sm:flex-row gap-4", data: { turbo_frame: "quotes_list" } do |f| %>
        <%= f.search_field :id_eq, placeholder: t('.search_id_placeholder'), class: "mt-1 block flex-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
        <%= f.search_field :client_name_cont, placeholder: t('.search_client_placeholder'), class: "flex-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
        <%= f.select :status_eq, options_for_select(Quote.statuses.map { |k, v| [I18n.t("activerecord.enums.quote.status.#{k}"), v] }, params.dig(:q, :status_eq)), { include_blank: t('.search_status_placeholder') }, { class: "mt-1 block rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" } %>
        <%= f.submit t('.search'), class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 cursor-pointer" %>
        <%= link_to t('.clear'), quotes_path, class: "px-4 py-2 border border-gray-300 rounded text-gray-700 hover:bg-gray-50", data: { turbo_frame: "quotes_list" } %>
      <% end %>
    </div>

    <% if @quotes.any? %>
      <div class="bg-white shadow rounded-lg overflow-y-hidden overflow-x-auto mt-6">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.id') %></th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.client') %></th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.date') %></th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.status') %></th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.total') %></th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.created_by') %></th>
              <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.actions') %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @quotes.each do |quote| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= formatted_quote_id(quote.id) %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= quote.client.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= l(quote.date) %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= render "status_badge", quote: quote %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">$<%= number_with_precision(quote.total_amount, precision: 0) %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= quote.user.email %></td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to t('global.actions.view'), quote, class: "text-indigo-600 hover:text-indigo-900 mr-3", data: { turbo_frame: "_top" } %>
                  <% if quote.draft? %>
                    <%= link_to edit_quote_path(quote), class: "text-indigo-600 hover:text-indigo-900 mr-3", title: t('global.actions.edit'), data: { turbo_frame: "_top" } do %>
                      <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>
                    <%= link_to quote_path(quote), data: { turbo_method: :delete, turbo_confirm: t('global.confirmations.delete'), turbo_frame: "_top" }, class: "text-red-600 hover:text-red-900", title: t('global.actions.delete') do %>
                      <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  <% elsif quote.sent? %>
                    <%= button_to t('global.actions.cancel'), cancel_quote_path(quote), method: :patch, class: "text-yellow-600 hover:text-yellow-900", data: { turbo_confirm: t('global.confirmations.cancel_quote'), turbo_frame: "_top" }, title: t('global.actions.cancel') %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="mt-6 flex flex-col items-center gap-2">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="bg-white shadow rounded-lg p-12 text-center mt-6">
        <p class="text-gray-500 text-lg mb-4"><%= t('.no_quotes') %></p>
        <%= link_to t('.create_first'), new_quote_path, class: "inline-block px-4 py-2 rounded bg-indigo-600 text-white hover:bg-indigo-700", data: { turbo_frame: "_top" } %>
      </div>
    <% end %>
  <% end %>
</div>
