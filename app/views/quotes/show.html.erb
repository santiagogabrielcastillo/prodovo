<div class="w-full max-w-4xl mx-auto">
  <!-- Action Buttons (Hidden in Print) -->
  <div class="mb-6 flex flex-col sm:flex-row gap-3 no-print">
    <%= link_to t('global.actions.back'), quotes_path, class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
    <% if @quote.can_edit? %>
      <%= link_to t('global.actions.edit'), edit_quote_path(@quote), class: "px-4 py-2 rounded bg-indigo-600 text-white hover:bg-indigo-700" %>
      <%= button_to t('global.actions.finalize_send'), mark_as_sent_quote_path(@quote), method: :patch, class: "px-4 py-2 rounded bg-green-600 text-white hover:bg-green-700", data: { turbo_confirm: t('global.confirmations.finalize') } %>
    <% end %>
    <% if @quote.sent? || @quote.partially_paid? || @quote.paid? %>
      <%= link_to quote_path(@quote, format: :pdf), class: "px-4 py-2 rounded bg-purple-600 text-white hover:bg-purple-700 flex items-center gap-2", target: "_blank" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <%= t('global.actions.download_pdf') %>
      <% end %>
    <% end %>
    <% if @quote.sent? || @quote.partially_paid? %>
      <%= link_to t('global.actions.record_payment'), new_quote_payment_path(@quote),
          class: "px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700",
          data: { turbo_frame: "modal" } %>
    <% end %>
  </div>

  <!-- Document Sheet - Flex column for sticky footer in print -->
  <div class="bg-white shadow-lg rounded-lg p-8 md:p-12 print:shadow-none print:p-4 print:flex print:flex-col print:min-h-[1000px]">

    <!-- Top Content (grows naturally) -->
    <div class="print:flex-grow">
      <!-- Header -->
      <div class="mb-8 pb-8 border-b border-gray-200 print:mb-3 print:pb-3 print:border-gray-300">
        <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-6 print:gap-2">
          <!-- Quote Info (Right) -->
          <div class="text-right">
            <h2 class="text-3xl font-bold text-gray-900 mb-4 print:text-xl print:mb-1 print:text-black">Presupuesto <%= formatted_quote_id(@quote.id) %></h2>
            <div class="space-y-2 text-sm print:space-y-0 print:text-xs">
              <div>
                <span class="text-gray-600 print:text-gray-700">Fecha:</span>
                <span class="font-semibold text-gray-900 print:text-black"><%= l(@quote.date) %></span>
              </div>
              <% if @quote.expiration_date %>
                <div>
                  <span class="text-gray-600 print:text-gray-700">Vence:</span>
                  <span class="font-semibold text-gray-900 print:text-black"><%= l(@quote.expiration_date) %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Client & Status Section -->
      <div class="mb-8 pb-8 border-b border-gray-200 print:mb-3 print:pb-3 print:border-gray-300">
        <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 print:gap-1">
          <div>
            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2 print:text-xs print:mb-0.5 print:text-gray-700">A:</h3>
            <div class="text-gray-900 print:text-black print:text-sm">
              <p class="font-semibold text-lg print:text-base"><%= @quote.client.name %></p>
              <% if @quote.client.address.present? %>
                <p class="text-sm whitespace-pre-line print:text-xs"><%= @quote.client.address %></p>
              <% end %>
              <p class="text-sm print:text-xs"><%= @quote.client.email %></p>
              <% if @quote.client.phone.present? %>
                <p class="text-sm print:text-xs"><%= @quote.client.phone %></p>
              <% end %>
            </div>
          </div>
          <div class="md:text-right print:hidden" id="quote_status_badge">
            <%= render "status_badge", quote: @quote %>
          </div>
        </div>
      </div>

      <!-- Items Table - With separate SKU column -->
      <div class="mb-8 print:mb-3">
        <table class="w-full print:text-sm">
          <thead class="hidden md:table-header-group print:table-header-group">
            <tr class="border-b-2 border-gray-300 print:border-gray-400">
              <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700 uppercase tracking-wide print:py-1 print:px-2 print:text-xs print:text-black" style="width: 15%">Código</th>
              <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700 uppercase tracking-wide print:py-1 print:px-2 print:text-xs print:text-black" style="width: 40%">Producto</th>
              <th class="text-right py-3 px-4 text-sm font-semibold text-gray-700 uppercase tracking-wide print:py-1 print:px-2 print:text-xs print:text-black" style="width: 10%">Cantidad</th>
              <th class="text-right py-3 px-4 text-sm font-semibold text-gray-700 uppercase tracking-wide print:py-1 print:px-2 print:text-xs print:text-black" style="width: 17.5%">Precio Unitario</th>
              <th class="text-right py-3 px-4 text-sm font-semibold text-gray-700 uppercase tracking-wide print:py-1 print:px-2 print:text-xs print:text-black" style="width: 17.5%">Precio Total</th>
            </tr>
          </thead>
          <tbody>
            <% if @quote.quote_items.any? %>
              <% @quote.quote_items.each do |item| %>
                <!-- Desktop View -->
                <tr class="border-b border-gray-200 print:border-gray-300 hidden md:table-row print:table-row">
                  <td class="py-4 px-4 text-gray-700 print:py-1 print:px-2 print:text-black"><%= item.product.sku %></td>
                  <td class="py-4 px-4 print:py-1 print:px-2">
                    <div class="font-semibold text-gray-900 print:text-black print:font-medium"><%= item.product.name %></div>
                  </td>
                  <td class="py-4 px-4 text-right text-gray-900 print:py-1 print:px-2 print:text-black"><%= format_quantity(item.quantity) %></td>
                  <td class="py-4 px-4 text-right text-gray-900 print:py-1 print:px-2 print:text-black"><%= format_currency(item.unit_price) %></td>
                  <td class="py-4 px-4 text-right font-semibold text-gray-900 print:py-1 print:px-2 print:text-black"><%= format_currency(item.total_price) %></td>
                </tr>
                <!-- Mobile View -->
                <tr class="border-b border-gray-200 print:hidden md:hidden">
                  <td class="py-4 px-4" colspan="5">
                    <div class="font-semibold text-gray-900 mb-1"><%= item.product.name %></div>
                    <div class="text-sm text-gray-500 mb-2">Código: <%= item.product.sku %></div>
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-600">Qty: <%= format_quantity(item.quantity) %></span>
                      <span class="text-gray-600">@ <%= format_currency(item.unit_price) %></span>
                    </div>
                    <div class="text-right mt-2 font-semibold text-gray-900">Total: <%= format_currency(item.total_price) %></div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="py-8 text-center text-gray-500">No hay productos en este presupuesto.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bottom Content (sticky footer in print) -->
    <div class="print:mt-auto print:break-inside-avoid">
      <!-- Totals Section -->
      <div class="flex justify-end mb-8 print:mb-3">
        <div class="w-full md:w-72 space-y-2 print:w-56 print:space-y-1 print:text-sm">
          <div class="flex justify-between text-gray-700 print:text-black">
            <span class="font-semibold">Subtotal:</span>
            <span><%= format_currency_integer(@quote.total_amount) %></span>
          </div>
          <div class="flex justify-between text-2xl font-bold text-gray-900 pt-2 border-t-2 border-gray-300 print:text-lg print:pt-1 print:text-black print:border-gray-400">
            <span>Total:</span>
            <span><%= format_currency_integer(@quote.total_amount) %></span>
          </div>

          <% if @quote.sent? || @quote.partially_paid? || @quote.paid? %>
            <!-- Payment Summary - Monochrome -->
            <div class="pt-4 mt-4 border-t border-gray-200 space-y-2 print:pt-2 print:mt-2 print:space-y-1" id="payment_summary">
              <div class="flex justify-between text-sm text-gray-600 print:text-xs print:text-black">
                <span><%= t('.paid') %>:</span>
                <span class="text-green-600 font-semibold print:text-black"><%= format_currency_integer(@quote.amount_paid) %></span>
              </div>
              <% if @quote.paid? %>
                <div class="flex justify-between text-sm print:text-xs">
                  <span class="text-green-700 font-bold print:text-black"><%= t('.fully_paid') %></span>
                  <span class="text-green-600 print:text-black">✓</span>
                </div>
              <% else %>
                <div class="flex justify-between text-sm text-gray-600 print:text-xs print:text-black">
                  <span><%= t('.due') %>:</span>
                  <span class="text-red-600 font-semibold print:text-black"><%= format_currency_integer(@quote.amount_due) %></span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Payments Section -->
      <% if @quote.sent? || @quote.partially_paid? || @quote.paid? %>
        <div class="pt-8 border-t border-gray-200 print:pt-3 print:border-gray-300">
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4 print:text-xs print:mb-2 print:text-gray-700">Pagos</h3>

          <!-- Payment History -->
          <div id="payment_history">
            <% if @quote.payments.any? %>
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 print:divide-gray-300 print:text-xs">
                  <thead class="bg-gray-50 print:bg-transparent">
                    <tr>
                      <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide print:px-2 print:py-1 print:text-black"><%= t('.payments_headers.date') %></th>
                      <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wide print:px-2 print:py-1 print:text-black"><%= t('.payments_headers.amount') %></th>
                      <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide print:px-2 print:py-1 print:text-black"><%= t('.payments_headers.notes') %></th>
                      <th class="px-4 py-3 text-center text-xs font-semibold text-gray-500 uppercase tracking-wide print:hidden no-print"><%= t('global.actions.actions') %></th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200 print:divide-gray-300" id="payment_history_body">
                    <% @quote.payments.order(date: :desc).each do |payment| %>
                      <tr id="payment_<%= payment.id %>">
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 print:px-2 print:py-1 print:text-black">
                          <%= l(payment.date) %>
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-right print:px-2 print:py-1 print:text-black <%= payment.amount < 0 ? 'text-red-600' : 'text-gray-900' %>">
                          <%= format_currency_integer(payment.amount) %>
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-700 print:px-2 print:py-1 print:text-black">
                          <%= payment.notes.presence || "—" %>
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-center print:hidden no-print">
                          <%= link_to edit_payment_path(payment), class: "text-indigo-600 hover:text-indigo-900", title: t('global.actions.edit') do %>
                            <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                            </svg>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <p class="text-gray-500 text-sm print:text-xs print:text-gray-700">No hay pagos registrados todavía.</p>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Notes Section -->
      <% if @quote.notes.present? %>
        <div class="pt-8 border-t border-gray-200 print:pt-3 print:border-gray-300">
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2 print:text-xs print:mb-1 print:text-gray-700">Notas</h3>
          <p class="text-gray-700 whitespace-pre-line print:text-xs print:text-black"><%= @quote.notes %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
