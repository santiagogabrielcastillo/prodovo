<div class="w-full max-w-4xl mx-auto">
  <!-- Action Buttons (Hidden in Print) -->
  <div class="mb-6 flex flex-col sm:flex-row gap-3 no-print">
    <%= link_to t('global.actions.back'), quotes_path, class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
    <% if @quote.can_edit? %>
      <%= link_to t('global.actions.edit'), edit_quote_path(@quote), class: "px-4 py-2 rounded bg-indigo-600 text-white hover:bg-indigo-700" %>
      <%= button_to t('global.actions.finalize_send'), mark_as_sent_quote_path(@quote), method: :patch, class: "px-4 py-2 rounded bg-green-600 text-white hover:bg-green-700", data: { turbo_confirm: t('global.confirmations.finalize') } %>
    <% end %>
    <% if @quote.sent? || @quote.partially_paid? || @quote.paid? %>
      <%= link_to quote_path(@quote, format: :pdf), class: "px-4 py-2 rounded bg-purple-600 text-white hover:bg-purple-700 flex items-center gap-2", target: "_blank" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <%= t('global.actions.download_pdf') %>
      <% end %>
    <% end %>
    <% if @quote.sent? || @quote.partially_paid? %>
      <%= link_to t('global.actions.record_payment'), new_quote_payment_path(@quote),
          class: "px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700",
          data: { turbo_frame: "modal" } %>
    <% end %>
  </div>

  <!-- Document Sheet -->
  <div class="bg-white shadow-lg rounded-lg p-8 md:p-12 print:shadow-none print:p-8">
    <!-- Header -->
    <div class="mb-8 pb-8 border-b border-gray-200 print:border-gray-300">
      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-6">
        <!-- Quote Info (Right) -->
        <div class="text-right">
          <h2 class="text-3xl font-bold text-gray-900 mb-4 print:text-black">Presupuesto <%= formatted_quote_id(@quote.id) %></h2>
          <div class="space-y-2 text-sm">
            <div>
              <span class="text-gray-600 print:text-gray-700">Fecha:</span>
              <span class="font-semibold text-gray-900 print:text-black"><%= @quote.date.strftime("%B %d, %Y") %></span>
            </div>
            <% if @quote.expiration_date %>
              <div>
                <span class="text-gray-600 print:text-gray-700">Vence:</span>
                <span class="font-semibold text-gray-900 print:text-black"><%= @quote.expiration_date.strftime("%B %d, %Y") %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Client & Status Section -->
    <div class="mb-8 pb-8 border-b border-gray-200 print:border-gray-300">
      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
        <div>
          <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2 print:text-gray-700">A:</h3>
          <div class="text-gray-900 print:text-black">
            <p class="font-semibold text-lg"><%= @quote.client.name %></p>
            <% if @quote.client.address.present? %>
              <p class="text-sm whitespace-pre-line"><%= @quote.client.address %></p>
            <% end %>
            <p class="text-sm"><%= @quote.client.email %></p>
            <% if @quote.client.phone.present? %>
              <p class="text-sm"><%= @quote.client.phone %></p>
            <% end %>
          </div>
        </div>
        <div class="md:text-right" id="quote_status_badge">
          <%= render "status_badge", quote: @quote %>
        </div>
      </div>
    </div>

    <!-- Items Table -->
    <div class="mb-8">
      <table class="w-full">
        <thead class="hidden md:table-header-group print:table-header-group">
          <tr class="border-b-2 border-gray-300 print:border-gray-400">
            <th class="text-left py-3 px-4 text-sm font-semibold text-gray-700 uppercase tracking-wide print:text-black">Producto</th>
            <th class="text-right py-3 px-4 text-sm font-semibold text-gray-700 uppercase tracking-wide print:text-black">Cantidad</th>
            <th class="text-right py-3 px-4 text-sm font-semibold text-gray-700 uppercase tracking-wide print:text-black">Precio Unitario</th>
            <th class="text-right py-3 px-4 text-sm font-semibold text-gray-700 uppercase tracking-wide print:text-black">Precio Total</th>
          </tr>
        </thead>
        <tbody>
          <% if @quote.quote_items.any? %>
            <% @quote.quote_items.each do |item| %>
              <!-- Desktop View -->
              <tr class="border-b border-gray-200 print:border-gray-300 hidden md:table-row print:table-row">
                <td class="py-4 px-4">
                  <div class="font-semibold text-gray-900 print:text-black"><%= item.product.name %></div>
                  <div class="text-sm text-gray-500 print:text-gray-600">SKU: <%= item.product.sku %></div>
                </td>
                <td class="py-4 px-4 text-right text-gray-900 print:text-black"><%= item.quantity %></td>
                <td class="py-4 px-4 text-right text-gray-900 print:text-black">$<%= number_with_precision(item.unit_price, precision: 0) %></td>
                <td class="py-4 px-4 text-right font-semibold text-gray-900 print:text-black">$<%= number_with_precision(item.total_price, precision: 0) %></td>
              </tr>
              <!-- Mobile View -->
              <tr class="border-b border-gray-200 print:hidden md:hidden">
                <td class="py-4 px-4">
                  <div class="font-semibold text-gray-900 mb-1"><%= item.product.name %></div>
                  <div class="text-sm text-gray-500 mb-2">SKU: <%= item.product.sku %></div>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-600">Qty: <%= item.quantity %></span>
                    <span class="text-gray-600">@ $<%= number_with_precision(item.unit_price, precision: 0) %></span>
                  </div>
                  <div class="text-right mt-2 font-semibold text-gray-900">Total: $<%= number_with_precision(item.total_price, precision: 0) %></div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="py-8 text-center text-gray-500">No hay productos en este presupuesto.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Totals Section -->
    <div class="flex justify-end mb-8">
      <div class="w-full md:w-64 space-y-2">
        <div class="flex justify-between text-gray-700 print:text-black">
          <span class="font-semibold">Subtotal:</span>
          <span>$<%= number_with_precision(@quote.total_amount, precision: 0) %></span>
        </div>
        <div class="flex justify-between text-2xl font-bold text-gray-900 pt-2 border-t-2 border-gray-300 print:text-black print:border-gray-400">
          <span>Total:</span>
          <span>$<%= number_with_precision(@quote.total_amount, precision: 0) %></span>
        </div>
      </div>
    </div>

    <!-- Payments Section -->
    <% if @quote.sent? || @quote.partially_paid? || @quote.paid? %>
      <div class="pt-8 border-t border-gray-200 print:border-gray-300">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4 print:text-gray-700">Pagos</h3>

        <!-- Payment History -->
        <div id="payment_history">
          <% if @quote.payments.any? %>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200 print:divide-gray-300">
                <thead class="bg-gray-50 print:bg-transparent">
                  <tr>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide print:text-black">Fecha</th>
                    <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wide print:text-black">Cantidad</th>
                    <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide print:text-black">Notas</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200 print:divide-gray-300" id="payment_history_body">
                  <% @quote.payments.order(date: :desc).each do |payment| %>
                    <tr id="payment_<%= payment.id %>">
                      <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 print:text-black">
                        <%= payment.date.strftime("%d/%m/%Y") %>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900 text-right print:text-black">
                        $<%= number_with_precision(payment.amount, precision: 0) %>
                      </td>
                      <td class="px-4 py-3 text-sm text-gray-700 print:text-black">
                        <%= payment.notes.presence || "—" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm print:text-gray-700">No hay pagos registrados todavía.</p>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Notes Section -->
    <% if @quote.notes.present? %>
      <div class="pt-8 border-t border-gray-200 print:border-gray-300">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2 print:text-gray-700">Notas</h3>
        <p class="text-gray-700 whitespace-pre-line print:text-black"><%= @quote.notes %></p>
      </div>
    <% end %>
  </div>
</div>
