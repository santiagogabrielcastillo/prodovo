<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
    <%= link_to t('.new_product'), new_product_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>

  <% if @products.any? %>
    <div class="bg-white shadow rounded overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.name') %></th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.sku') %></th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.base_price') %></th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @products.each do |product| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= product.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= product.sku %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">$<%= number_with_precision(product.base_price, precision: 0) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to t('global.actions.view'), product_path(product), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                <%= link_to t('global.actions.edit'), edit_product_path(product), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= link_to t('global.actions.delete'), product_path(product), data: { turbo_method: :delete, turbo_confirm: t('global.confirmations.delete') }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded p-6 text-center text-gray-500">
      <%= t('.no_products') %> <%= link_to t('.create_first'), new_product_path, class: "text-blue-600 hover:text-blue-900" %>.
    </div>
  <% end %>
</div>
