<div class="w-full">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @product.name %></h1>
      <p class="text-gray-500"><%= t('.sku_label') %> <%= @product.sku %></p>
    </div>
    <div class="flex gap-3">
      <%= link_to t('global.actions.edit'), edit_product_path(@product), class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
      <%= link_to t('global.actions.back'), products_path, class: "px-4 py-2 rounded bg-gray-800 text-white hover:bg-gray-900" %>
    </div>
  </div>

  <div class="bg-white shadow rounded p-6 space-y-4">
    <div>
      <p class="text-sm font-medium text-gray-500"><%= t('.base_price') %></p>
      <p class="text-2xl font-semibold text-gray-900">$<%= number_with_precision(@product.base_price, precision: 0) %></p>
    </div>

    <div>
      <p class="text-sm font-medium text-gray-500"><%= t('.description') %></p>
      <p class="text-gray-700 mt-1"><%= @product.description.presence || t('.no_description') %></p>
    </div>

    <div>
      <p class="text-sm font-medium text-gray-500"><%= t('.include_in_stats') %></p>
      <p class="mt-1">
        <% if @product.include_in_stats %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <%= t('.included_yes') %>
          </span>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
            <%= t('.included_no') %>
          </span>
        <% end %>
      </p>
    </div>
  </div>
</div>
