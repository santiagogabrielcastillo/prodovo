<%= form_with(model: product, class: "space-y-6") do |form| %>
  <% if product.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded">
      <p class="font-semibold mb-2">Please fix the following:</p>
      <ul class="list-disc list-inside text-sm">
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
  </div>

  <div>
    <%= form.label :sku, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :sku, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
  </div>

  <div>
    <%= form.label :base_price, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :base_price, step: 1, value: product.base_price&.to_i, class: "no-spinner mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
  </div>

  <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:justify-end">
    <%= link_to "Cancel",
        product.persisted? ? product : products_path,
        class: "mt-3 inline-flex w-full justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-base font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:mt-0 sm:w-auto sm:text-sm" %>
    <%= form.submit "Save Product",
        class: "flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
  </div>
<% end %>

