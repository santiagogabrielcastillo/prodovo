<div class="w-full space-y-6">
  <!-- Header -->
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Tablero de Control</h1>
    <p class="text-gray-600 mt-2">Vista general del negocio</p>
  </div>

  <!-- KPI Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div class="bg-white shadow rounded-lg p-6">
      <p class="text-sm font-medium text-gray-500 mb-2">Por Cobrar</p>
      <p class="text-4xl font-bold text-red-600">$<%= number_with_precision(@total_receivables, precision: 0) %></p>
      <p class="text-xs text-gray-500 mt-2">Total de saldos pendientes de clientes</p>
    </div>
    <div class="bg-white shadow rounded-lg p-6">
      <p class="text-sm font-medium text-gray-500 mb-2">Ventas del Mes</p>
      <p class="text-4xl font-bold text-green-600">$<%= number_with_precision(@monthly_sales, precision: 0) %></p>
      <p class="text-xs text-gray-500 mt-2">Presupuestos enviados este mes</p>
    </div>
  </div>

  <!-- Activity Feed -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Últimos Presupuestos -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Últimos Presupuestos</h2>
      <% if @last_quotes.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Cliente</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Fecha</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Total</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @last_quotes.each do |quote| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                    <%= link_to quote.client.name, client_path(quote.client), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">
                    <%= l(quote.date, format: :month_day) %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm">
                    <%= render "quotes/status_badge", quote: quote %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900 text-right">
                    $<%= number_with_precision(quote.total_amount, precision: 0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">No hay presupuestos recientes.</p>
      <% end %>
    </div>

    <!-- Últimos Cobros -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Últimos Cobros</h2>
      <% if @last_payments.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Cliente</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Fecha</th>
                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Monto</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @last_payments.each do |payment| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                    <%= link_to payment.client.name, client_path(payment.client), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">
                    <%= l(payment.date, format: :month_day) %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-green-600 text-right">
                    $<%= number_with_precision(payment.amount, precision: 0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">No hay cobros recientes.</p>
      <% end %>
    </div>
  </div>
</div>
