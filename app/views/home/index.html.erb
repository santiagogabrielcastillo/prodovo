<div class="w-full">
  <h1 class="font-bold text-4xl mb-4">Welcome to Prodovo</h1>
  <p class="text-gray-600 mb-8">Quote & Budget Management System</p>

  <% if user_signed_in? %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-2">Dashboard</h2>
      <p class="text-gray-700">You are signed in as: <strong><%= current_user.email %></strong></p>
    </div>
  <% else %>
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-2">Get Started</h2>
      <p class="text-gray-700 mb-4">Please sign in or sign up to access the system.</p>
      <div class="flex flex-wrap gap-4">
        <%= link_to "Sign in", new_user_session_path, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
        <%= link_to "Sign up", new_user_registration_path, class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
      </div>
    </div>
  <% end %>
</div>
