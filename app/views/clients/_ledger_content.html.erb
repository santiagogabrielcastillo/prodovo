<%# Local variables: ledger_items, previous_balance, page_starting_balance, filtering, start_date, pagination %>
<% page_starting_balance ||= previous_balance %>
<% if ledger_items.any? || (filtering && previous_balance != 0) %>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('clients.show.ledger_headers.date') %></th>
          <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('clients.show.ledger_headers.concept') %></th>
          <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('clients.show.ledger_headers.debe') %></th>
          <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('clients.show.ledger_headers.haber') %></th>
          <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('clients.show.ledger_headers.balance') %></th>
          <th class="px-4 py-3 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider no-print"><%= t('global.actions.actions') %></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <!-- Previous Balance Row (when filtering on page 1) -->
        <% if filtering && start_date.present? && pagination[:current_page] == 1 %>
          <tr class="bg-amber-50">
            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 font-medium">
              <%= l(start_date) %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-900 font-medium italic">
              <%= t('clients.show.previous_balance') %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900 text-right">
              <% if previous_balance > 0 %>
                $<%= number_with_precision(previous_balance, precision: 0) %>
              <% else %>
                —
              <% end %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-green-600 text-right">
              <% if previous_balance < 0 %>
                $<%= number_with_precision(previous_balance.abs, precision: 0) %>
              <% else %>
                —
              <% end %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-right <%= previous_balance >= 0 ? 'text-gray-900' : 'text-red-600' %>">
              $<%= number_with_precision(previous_balance, precision: 0) %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm text-center no-print">—</td>
          </tr>
        <% elsif pagination[:current_page] > 1 && page_starting_balance != 0 %>
          <!-- Balance Carried Forward Row (for pages after page 1) -->
          <tr class="bg-blue-50">
            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 font-medium">
              —
            </td>
            <td class="px-4 py-3 text-sm text-gray-900 font-medium italic">
              <%= t('clients.show.balance_carried_forward') %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900 text-right">
              —
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-green-600 text-right">
              —
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-right <%= page_starting_balance >= 0 ? 'text-gray-900' : 'text-red-600' %>">
              $<%= number_with_precision(page_starting_balance, precision: 0) %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm text-center no-print">—</td>
          </tr>
        <% end %>

        <% ledger_items.each do |entry| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
              <%= l(entry[:date]) %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-900">
              <% if entry[:type] == :quote %>
                <%= link_to t('clients.show.ledger_concepts.quote', id: entry[:item].id), quote_path(entry[:item]), class: "text-indigo-600 hover:text-indigo-900 font-medium", data: { turbo_frame: "_top" } %>
              <% else %>
                <% payment = entry[:item] %>
                <% if payment.quote.present? %>
                  <span class="text-gray-700"><%= t('clients.show.ledger_concepts.payment') %></span>
                  <span class="text-gray-400 text-xs ml-1">
                    (<%= link_to t('clients.show.ledger_concepts.quote', id: payment.quote.id), quote_path(payment.quote), class: "text-indigo-500 hover:text-indigo-700", data: { turbo_frame: "_top" } %>)
                  </span>
                <% else %>
                  <span class="text-green-700 font-medium"><%= t('clients.show.ledger_concepts.standalone_payment') %></span>
                <% end %>
                <% if payment.notes.present? %>
                  <span class="text-gray-400 text-xs ml-1">- <%= truncate(payment.notes, length: 30) %></span>
                <% end %>
              <% end %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900 text-right">
              <% if entry[:type] == :quote %>
                $<%= number_with_precision(entry[:item].total_amount, precision: 0) %>
              <% else %>
                —
              <% end %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-green-600 text-right">
              <% if entry[:type] == :payment %>
                $<%= number_with_precision(entry[:item].amount, precision: 0) %>
              <% else %>
                —
              <% end %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-right <%= entry[:balance] >= 0 ? 'text-gray-900' : 'text-red-600' %>">
              $<%= number_with_precision(entry[:balance], precision: 0) %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-sm text-center no-print">
              <% if entry[:type] == :payment %>
                <%= link_to edit_payment_path(entry[:item]), class: "text-indigo-600 hover:text-indigo-900", title: t('global.actions.edit'), data: { turbo_frame: "_top" } do %>
                  <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                  </svg>
                <% end %>
              <% else %>
                —
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if pagination[:total_pages] > 1 %>
    <div class="mt-4 flex justify-center items-center gap-2">
      <% if pagination[:current_page] > 1 %>
        <%= link_to "← #{t('clients.show.pagination.previous')}", client_path(client, ledger_page: pagination[:current_page] - 1, start_date: start_date&.strftime("%d/%m/%Y"), end_date: end_date&.strftime("%d/%m/%Y")),
            class: "px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50",
            data: { turbo_frame: "client_ledger" } %>
      <% end %>
      <span class="text-sm text-gray-600">
        <%= t('clients.show.pagination.page_info', current: pagination[:current_page], total: pagination[:total_pages]) %>
      </span>
      <% if pagination[:current_page] < pagination[:total_pages] %>
        <%= link_to "#{t('clients.show.pagination.next')} →", client_path(client, ledger_page: pagination[:current_page] + 1, start_date: start_date&.strftime("%d/%m/%Y"), end_date: end_date&.strftime("%d/%m/%Y")),
            class: "px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50",
            data: { turbo_frame: "client_ledger" } %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p class="text-gray-500"><%= t('clients.show.no_ledger_entries') %></p>
<% end %>

