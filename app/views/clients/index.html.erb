<div class="w-full space-y-6">
  <div class="flex sm:flex-row flex-col space-y-2 sm:items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
    <div>
      <%= link_to t('.new_client'), new_client_path, class: "px-4 py-2 rounded bg-indigo-600 text-white hover:bg-indigo-700" %>
    </div>
  </div>

  <!-- Search Form -->
  <div class="bg-white shadow rounded-lg p-4">
    <%= search_form_for @q, url: clients_path, method: :get, class: "flex flex-col sm:flex-row gap-4" do |f| %>
      <%= f.search_field :name_cont, placeholder: t('.search_placeholder'), class: "flex-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
      <%= f.search_field :email_cont, placeholder: t('.search_email_placeholder'), class: "flex-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
      <%= f.submit t('.search'), class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700" %>
      <%= link_to t('.clear'), clients_path, class: "px-4 py-2 border border-gray-300 rounded text-gray-700 hover:bg-gray-50" %>
    <% end %>
  </div>

  <% if @clients.any? %>
    <div class="bg-white shadow rounded overflow-y-hidden overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"># Cliente</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.name') %></th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.email') %></th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.phone') %></th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.headers.balance') %></th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @clients.each do |client| %>
            <% balance_value = client.balance || 0 %>
            <% balance_class = balance_value < 0 ? "text-red-600" : "text-green-600" %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">00000000<%= client.id %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= client.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= client.email %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= client.phone %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold <%= balance_class %>">
                $<%= number_with_precision(balance_value, precision: 0) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to t('global.actions.view'), client_path(client), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                <%= link_to t('global.actions.edit'), edit_client_path(client), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= link_to t('global.actions.delete'), client_path(client), data: { turbo_method: :delete, turbo_confirm: t('global.confirmations.delete') }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="mt-6 flex flex-col items-center gap-2">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  <% else %>
    <div class="bg-white shadow rounded p-6 text-center text-gray-500">
      <%= t('.no_clients') %> <%= link_to t('.create_first'), new_client_path, class: "text-blue-600 hover:text-blue-900" %>.
    </div>
  <% end %>
</div>
