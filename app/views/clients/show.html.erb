<div class="w-full space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @client.name %></h1>
      <p class="text-gray-500"><%= @client.email %></p>
    </div>
    <div class="flex gap-3">
      <%= link_to "Edit", edit_client_path(@client), class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
      <%= link_to "Back to Clients", clients_path, class: "px-4 py-2 rounded bg-gray-800 text-white hover:bg-gray-900" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white shadow rounded p-6 space-y-4">
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Contact Information</h2>
      <div>
        <p class="text-sm font-medium text-gray-500">Phone</p>
        <p class="text-gray-900"><%= @client.phone.presence || "—" %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Tax ID</p>
        <p class="text-gray-900"><%= @client.tax_id.presence || "—" %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500">Address</p>
        <p class="text-gray-900 whitespace-pre-line"><%= @client.address.presence || "—" %></p>
      </div>
    </div>

    <div class="bg-white shadow rounded p-6 space-y-4">
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Financials</h2>
      <% balance_value = @client.balance || 0 %>
      <% balance_class = balance_value < 0 ? "text-red-600" : "text-green-600" %>
      <div>
        <p class="text-sm font-medium text-gray-500">Current Balance</p>
        <p class="text-3xl font-bold <%= balance_class %>">$<%= number_with_precision(balance_value, precision: 0) %></p>
      </div>
      <p class="text-sm text-gray-500">Balance is recalculated automatically once quotes and payments are tracked.</p>
    </div>
  </div>

  <div class="bg-white shadow rounded p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Custom Price List</h2>
      <%= link_to "Add Custom Price", new_client_custom_price_path(@client), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    </div>

    <% if @custom_prices.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Product</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Overridden Price</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @custom_prices.each do |custom_price| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= custom_price.product.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">$<%= number_with_precision(custom_price.price, precision: 0) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Edit", edit_client_custom_price_path(@client, custom_price), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= link_to "Delete", client_custom_price_path(@client, custom_price), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-gray-500">No custom prices have been defined for this client.</p>
    <% end %>
  </div>
</div>
