<div class="w-full space-y-8">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @client.name %></h1>
      <p class="text-gray-500"><%= @client.email %></p>
    </div>
    <div class="flex flex-wrap gap-3">
      <%= link_to t('.new_quote'), new_quote_path(client_id: @client.id), class: "px-4 py-2 rounded bg-indigo-600 text-white hover:bg-indigo-700 font-medium" %>
      <%= link_to t('global.actions.edit'), edit_client_path(@client), class: "px-4 py-2 rounded border border-gray-300 text-gray-700 hover:bg-gray-50" %>
      <%= link_to t('global.actions.back'), clients_path, class: "px-4 py-2 rounded bg-gray-800 text-white hover:bg-gray-900" %>
    </div>
  </div>

  <!-- KPI Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 overflow-x-auto">
    <div class="bg-white shadow rounded-lg p-6 min-w-[200px]">
      <p class="text-sm font-medium text-gray-500 mb-2"><%= t('.current_balance') %></p>
      <% balance_value = @client.balance || 0 %>
      <% balance_class = balance_value < 0 ? "text-red-600" : balance_value == 0 ? "text-gray-900" : "text-green-600" %>
      <p class="text-3xl font-bold <%= balance_class %>">$<%= number_with_precision(balance_value, precision: 0) %></p>
    </div>
    <div class="bg-white shadow rounded-lg p-6 min-w-[200px]">
      <p class="text-sm font-medium text-gray-500 mb-2">
        <%= t('.total_invoiced') %>
        <% if @filtering %>
          <span class="text-xs text-gray-400">(<%= t('.filtered_period') %>)</span>
        <% end %>
      </p>
      <p class="text-3xl font-bold text-gray-900">$<%= number_with_precision(@total_invoiced, precision: 0) %></p>
    </div>
    <div class="bg-white shadow rounded-lg p-6 min-w-[200px]">
      <p class="text-sm font-medium text-gray-500 mb-2">
        <%= t('.total_collected') %>
        <% if @filtering %>
          <span class="text-xs text-gray-400">(<%= t('.filtered_period') %>)</span>
        <% end %>
      </p>
      <p class="text-3xl font-bold text-green-600">$<%= number_with_precision(@total_collected, precision: 0) %></p>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4"><%= t('.contact_info') %></h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <p class="text-sm font-medium text-gray-500"><%= t('.contact_labels.phone') %></p>
        <p class="text-gray-900"><%= @client.phone.presence || "—" %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500"><%= t('.contact_labels.tax_id') %></p>
        <p class="text-gray-900"><%= @client.tax_id.presence || "—" %></p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-500"><%= t('.contact_labels.address') %></p>
        <p class="text-gray-900 whitespace-pre-line"><%= @client.address.presence || "—" %></p>
      </div>
    </div>
  </div>

  <!-- Ledger Table (Cuenta Corriente) -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-4">
      <h2 class="text-xl font-semibold text-gray-900"><%= t('.cuenta_corriente') %></h2>

      <!-- CSV Export Button -->
      <%= link_to client_path(@client, format: :csv, start_date: @start_date&.strftime("%d/%m/%Y"), end_date: @end_date&.strftime("%d/%m/%Y")),
          class: "inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 font-medium text-sm" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <%= t('.export_csv') %>
      <% end %>
    </div>

    <!-- Date Filter Form -->
    <%= form_with url: client_path(@client), method: :get, class: "mb-6", data: { turbo_frame: "client_ledger" } do |f| %>
      <div class="flex flex-col sm:flex-row gap-4 items-end">
        <div class="flex-1 w-full">
          <label for="start_date" class="block text-sm font-medium text-gray-700 mb-1"><%= t('.filter.start_date') %></label>
          <input type="date"
                 name="start_date"
                 id="start_date"
                 value="<%= @start_date&.strftime("%Y-%m-%d") %>"
                 class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-3 text-sm">
        </div>
        <div class="flex-1 w-full">
          <label for="end_date" class="block text-sm font-medium text-gray-700 mb-1"><%= t('.filter.end_date') %></label>
          <input type="date"
                 name="end_date"
                 id="end_date"
                 value="<%= @end_date&.strftime("%Y-%m-%d") %>"
                 class="w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-2 px-3 text-sm">
        </div>
        <div class="flex gap-2">
          <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium text-sm">
            <%= t('.filter.apply') %>
          </button>
          <% if @filtering %>
            <%= link_to t('.filter.clear'), client_path(@client), class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 font-medium text-sm", data: { turbo_frame: "client_ledger" } %>
          <% end %>
        </div>
      </div>
    <% end %>

    <%= turbo_frame_tag "client_ledger" do %>
      <% if @ledger_items.any? || (@filtering && @previous_balance != 0) %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.ledger_headers.date') %></th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.ledger_headers.concept') %></th>
                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.ledger_headers.debe') %></th>
                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.ledger_headers.haber') %></th>
                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.ledger_headers.balance') %></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <!-- Previous Balance Row (only when filtering) -->
              <% if @filtering && @start_date.present? && @ledger_pagination[:current_page] == 1 %>
                <tr class="bg-amber-50">
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 font-medium">
                    <%= l(@start_date) %>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-900 font-medium italic">
                    <%= t('.previous_balance') %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900 text-right">
                    <% if @previous_balance > 0 %>
                      $<%= number_with_precision(@previous_balance, precision: 0) %>
                    <% else %>
                      —
                    <% end %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-green-600 text-right">
                    <% if @previous_balance < 0 %>
                      $<%= number_with_precision(@previous_balance.abs, precision: 0) %>
                    <% else %>
                      —
                    <% end %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-right <%= @previous_balance >= 0 ? 'text-gray-900' : 'text-red-600' %>">
                    $<%= number_with_precision(@previous_balance, precision: 0) %>
                  </td>
                </tr>
              <% end %>

              <% @ledger_items.each do |entry| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                    <%= l(entry[:date]) %>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-900">
                    <% if entry[:type] == :quote %>
                      <%= link_to t('.ledger_concepts.quote', id: entry[:item].id), quote_path(entry[:item]), class: "text-indigo-600 hover:text-indigo-900 font-medium", data: { turbo_frame: "_top" } %>
                    <% else %>
                      <span class="text-gray-700"><%= t('.ledger_concepts.payment') %></span>
                    <% end %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900 text-right">
                    <% if entry[:type] == :quote %>
                      $<%= number_with_precision(entry[:item].total_amount, precision: 0) %>
                    <% else %>
                      —
                    <% end %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-green-600 text-right">
                    <% if entry[:type] == :payment %>
                      $<%= number_with_precision(entry[:item].amount, precision: 0) %>
                    <% else %>
                      —
                    <% end %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-right <%= entry[:balance] >= 0 ? 'text-gray-900' : 'text-red-600' %>">
                    $<%= number_with_precision(entry[:balance], precision: 0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if @ledger_pagination[:total_pages] > 1 %>
          <div class="mt-4 flex justify-center items-center gap-2">
            <% if @ledger_pagination[:current_page] > 1 %>
              <%= link_to "← #{t('.pagination.previous')}", client_path(@client, ledger_page: @ledger_pagination[:current_page] - 1, start_date: @start_date&.strftime("%d/%m/%Y"), end_date: @end_date&.strftime("%d/%m/%Y")),
                  class: "px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50",
                  data: { turbo_frame: "client_ledger" } %>
            <% end %>
            <span class="text-sm text-gray-600">
              <%= t('.pagination.page_info', current: @ledger_pagination[:current_page], total: @ledger_pagination[:total_pages]) %>
            </span>
            <% if @ledger_pagination[:current_page] < @ledger_pagination[:total_pages] %>
              <%= link_to "#{t('.pagination.next')} →", client_path(@client, ledger_page: @ledger_pagination[:current_page] + 1, start_date: @start_date&.strftime("%d/%m/%Y"), end_date: @end_date&.strftime("%d/%m/%Y")),
                  class: "px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50",
                  data: { turbo_frame: "client_ledger" } %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500"><%= t('.no_ledger_entries') %></p>
      <% end %>
    <% end %>
  </div>

  <!-- Custom Price List -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900"><%= t('.custom_price_list') %></h2>
      <%= link_to t('.add_custom_price'), new_client_custom_price_path(@client), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    </div>

    <% if @custom_prices.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.custom_price_headers.product') %></th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= t('.custom_price_headers.overridden_price') %></th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @custom_prices.each do |custom_price| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= custom_price.product.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">$<%= number_with_precision(custom_price.price, precision: 0) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to t('global.actions.edit'), edit_client_custom_price_path(@client, custom_price), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= link_to t('global.actions.delete'), client_custom_price_path(@client, custom_price), data: { turbo_method: :delete, turbo_confirm: t('global.confirmations.delete') }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% else %>
      <p class="text-gray-500"><%= t('.no_custom_prices') %></p>
    <% end %>
  </div>
</div>
