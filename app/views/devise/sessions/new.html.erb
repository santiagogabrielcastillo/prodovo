<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4 py-8">
  <div class="w-full max-w-md bg-white shadow-md rounded-lg p-8">
    <div class="mb-6 text-center">
      <h1 class="text-2xl font-semibold text-gray-900"><%= t('devise.sessions.new.sign_in') %></h1>
      <p class="text-sm text-gray-500 mt-1">Ingresa a tu cuenta para acceder al panel</p>
    </div>

    <% if resource.errors.any? %>
      <div class="mb-6 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
        <p class="font-semibold mb-2">Por favor corrige lo siguiente:</p>
        <ul class="list-disc list-inside space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-5">
        <div>
          <%= f.label :email, t('activerecord.attributes.client.email'), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                required: true,
                placeholder: "tu@email.com",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
        </div>

        <div>
          <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
                autocomplete: "current-password",
                required: true,
                placeholder: "••••••••",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 py-3 px-4 text-base" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between text-sm text-gray-600">
            <label class="inline-flex items-center gap-2">
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
              <span><%= t('devise.sessions.new.remember_me') %></span>
            </label>
            <%= link_to t('devise.sessions.new.forgot_password'), new_password_path(resource_name), class: "text-blue-600 hover:text-blue-500 w-fit" %>
          </div>
        <% end %>

        <div>
          <%= f.submit t('devise.sessions.new.sign_in'), class: "flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-3 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors" %>
        </div>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-600">
      ¿No tienes una cuenta?
      <%= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name), class: "text-blue-600 font-semibold hover:text-blue-500" %>
    </p>
  </div>
</div>
