#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ] && [ -f /usr/lib/*/libjemalloc.so.2 ]; then
  export LD_PRELOAD="$(echo /usr/lib/*/libjemalloc.so.2)"
fi

# MODIFICADO: Chequeo mÃ¡s flexible. Si el segundo argumento es "server", migramos.
# Esto atrapa "./bin/rails server", "bin/rails server", o "rails server".
if [[ "$@" == *"server"* ]]; then
  echo "ðŸš€ Detectado inicio de servidor. Ejecutando migraciones..."
  ./bin/rails db:prepare
fi

exec "${@}"